<UserControl x:Class="PointOfSale.CustomizeAngryChicken"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <TextBlock Text="Customize Angry Chicken" FontSize="50"/>
            <CheckBox IsChecked="{Binding Path=Bread}">Bread</CheckBox>
            <CheckBox IsChecked="{Binding Path=Pickle}">Pickle</CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
